<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7A71EE82"
    android:orientation="vertical">

    <ListView
        android:id="@+id/start_display"
        android:layout_width="495dp"
        android:layout_height="392dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"></ListView>

    <FrameLayout
        android:id="@+id/frag_frame"
        android:layout_width="507dp"
        android:layout_height="791dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <Button
            android:id="@+id/deposit"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="330dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="615dp"
            android:text="Deposit"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/withdraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="330dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="655dp"
            android:text="Withdraw"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/to_edit_acnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="260dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="720dp"
            android:text="To Edit Accounts" />

    </FrameLayout>


    <Button
        android:id="@+id/display_back"
        android:layout_width="145dp"
        android:layout_height="64dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="15dp"
        android:text="HOME"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/amount_change"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="160dp"
        android:layout_marginBottom="100dp"
        android:hint="Enter Amount "
        android:textColor="#A003F8"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/id_change"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="120dp"
        android:layout_marginBottom="100dp"
        android:hint="Enter ID "
        android:textColor="#A003F8"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>